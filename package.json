{
    "name": "shine-web",
    "version": "0.0.1",
    "private": true,
    "scripts": {
        "prepare": "husky",
        "start:local": "cross-env NODE_ENV=local vite dev",
        "start:dev": "cross-env NODE_ENV=dev vite dev",
        "build:local": "cross-env NODE_ENV=local vite build",
        "build:dev": "cross-env NODE_ENV=dev vite build",
        "build": "cross-env NODE_ENV=prod vite build",
        "preview:dev": "cross-env NODE_ENV=dev vite preview",
        "preview": "cross-env NODE_ENV=prod vite preview",
        "test": "npm run test:integration && npm run test:unit",
        "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
        "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
        "lint": "prettier --check . && eslint .",
        "format": "prettier --write .",
        "test:integration": "playwright test",
        "test:unit": "vitest",
        "mkcert": "cd certificates && mkcert create-ca && npx mkcert create-cert --domains local-web.scytta.com,local-web.scytta.com:4443"
    },
    "devDependencies": {
        "@playwright/test": "^1.47.2",
        "@sveltejs/adapter-auto": "^3.2.5",
        "@sveltejs/adapter-cloudflare": "^4.7.2",
        "@sveltejs/kit": "^2.5.28",
        "@sveltejs/vite-plugin-svelte": "^4.0.0-next.7",
        "@tailwindcss/nesting": "^0.0.0-insiders.565cd3e",
        "@tailwindcss/typography": "^0.5.15",
        "@trivago/prettier-plugin-sort-imports": "^4.3.0",
        "@types/debug": "^4.1.12",
        "@types/eslint": "^9.6.1",
        "@types/node": "^22.7.2",
        "@types/ua-parser-js": "^0.7.39",
        "@types/uuid": "^10.0.0",
        "autoprefixer": "^10.4.19",
        "cross-env": "^7.0.3",
        "daisyui": "^4.12.10",
        "eslint": "^9.11.1",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-svelte": "^2.44.0",
        "globals": "^15.0.0",
        "husky": "^9.1.6",
        "mkcert": "^3.2.0",
        "postcss": "^8.4.40",
        "postcss-import": "^16.1.0",
        "prettier": "^3.1.1",
        "prettier-plugin-svelte": "^3.2.7",
        "prettier-plugin-tailwindcss": "^0.6.8",
        "svelte": "^5.0.0-next.259",
        "svelte-check": "^4.0.3",
        "tailwindcss": "^3.4.13",
        "typescript": "^5.6.2",
        "typescript-eslint": "^8.7.0",
        "vite": "^5.4.8",
        "vitest": "^2.1.1",
        "wrangler": "^3.78.10"
    },
    "type": "module",
    "dependencies": {
        "@floating-ui/dom": "^1.6.11",
        "debug": "^4.3.7",
        "sveltekit-i18n": "^2.4.2",
        "tailwind-merge": "^2.5.2",
        "turnstile-types": "^1.2.3",
        "ua-parser-js": "^1.0.39",
        "uuid": "^10.0.0"
    }
}
