{
    "name": "shine-web",
    "version": "0.0.1",
    "private": true,
    "scripts": {
        "prepare": "husky",
        "start:local": "cross-env NODE_ENV=local vite dev",
        "start:dev": "cross-env NODE_ENV=dev vite dev",
        "build:svgParser": "npx peggy -c src/components/atoms/svg/peggy.config.js && node scripts/fix-parser.js",
        "build:local": "cross-env NODE_ENV=local vite build",
        "build:dev": "cross-env NODE_ENV=dev vite build",
        "build": "cross-env NODE_ENV=prod vite build",
        "preview:dev": "cross-env NODE_ENV=dev vite preview",
        "preview": "cross-env NODE_ENV=prod vite preview",
        "test": "npm run test:integration && npm run test:unit",
        "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
        "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
        "lint": "prettier --check . && eslint .",
        "format": "prettier --write .",
        "test:integration": "playwright test",
        "test:unit": "vitest",
        "mkcert": "cd certificates && mkcert create-ca && npx mkcert create-cert --domains local-web.scytta.com,local-web.scytta.com:4443"
    },
    "devDependencies": {
        "@playwright/test": "^1.49.0",
        "@skeletonlabs/tw-plugin": "^0.4.0",
        "@sveltejs/adapter-auto": "^3.3.1",
        "@sveltejs/adapter-cloudflare": "^4.7.4",
        "@sveltejs/kit": "^2.8.1",
        "@sveltejs/vite-plugin-svelte": "^4.0.1",
        "@tailwindcss/forms": "^0.5.9",
        "@tailwindcss/nesting": "^0.0.0-insiders.565cd3e",
        "@trivago/prettier-plugin-sort-imports": "^4.3.0",
        "@types/debug": "^4.1.12",
        "@types/eslint": "^9.6.1",
        "@types/node": "^22.9.1",
        "@types/ua-parser-js": "^0.7.39",
        "@types/uuid": "^10.0.0",
        "autoprefixer": "^10.4.19",
        "cross-env": "^7.0.3",
        "eslint": "^9.15.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-svelte": "^2.46.0",
        "globals": "^15.12.0",
        "husky": "^9.1.7",
        "mkcert": "^3.2.0",
        "peggy": "^4.2.0",
        "postcss": "^8.4.49",
        "postcss-import": "^16.1.0",
        "prettier": "^3.1.1",
        "prettier-plugin-svelte": "^3.2.8",
        "prettier-plugin-tailwindcss": "^0.6.9",
        "svelte": "^5.2.4",
        "svelte-check": "^4.0.9",
        "tailwindcss": "^3.4.15",
        "typescript": "^5.6.3",
        "typescript-eslint": "^8.15.0",
        "vite": "^5.4.11",
        "vitest": "^2.1.5",
        "wrangler": "^3.88.0"
    },
    "type": "module",
    "dependencies": {
        "@floating-ui/dom": "^1.6.12",
        "debug": "^4.3.7",
        "sveltekit-i18n": "^2.4.2",
        "tailwind-merge": "^2.5.4",
        "turnstile-types": "^1.2.3",
        "ua-parser-js": "^2.0.0",
        "uuid": "^11.0.3"
    }
}
