{
    "name": "shine-web",
    "version": "0.0.1",
    "private": true,
    "type": "module",
    "scripts": {
        "prepare": "husky",
        "env:mock": "npx msw init && tsx scripts/select-config.ts mock",
        "env:local": "tsx scripts/select-config.ts local",
        "env:dev": "tsx scripts/select-config.ts dev",
        "env:prod": "tsx scripts/select-config.ts prod",
        "build:svgParser": "npx peggy -c src/components/atoms/svg/peggy.config.js && node scripts/fix-parser.js",
        "build:assets": "tsx ./scripts/asset-converter",
        "start": "vite dev",
        "build": "vite build",
        "preview": "vite preview",
        "test": "npm run test:integration && npm run test:unit",
        "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
        "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
        "lint": "npm run lint:format && npm run lint:eslint",
        "lint:format": "prettier --check .",
        "lint:eslint": "eslint .",
        "format": "prettier --write .",
        "test:integration": "playwright test",
        "test:unit": "vitest",
        "mkcert": "cd certificates && mkcert create-ca && mkcert create-cert --domains local-scytta.com"
    },
    "dependencies": {
        "@floating-ui/dom": "^1.6.13",
        "debug": "^4.4.0",
        "sveltekit-i18n": "^2.4.2",
        "tailwind-merge": "^2.6.0",
        "turnstile-types": "^1.2.3",
        "ua-parser-js": "^2.0.0",
        "uuid": "^11.0.5",
        "zod": "^3.24.1"
    },
    "devDependencies": {
        "@playwright/test": "^1.50.0",
        "@skeletonlabs/tw-plugin": "^0.4.1",
        "@sveltejs/adapter-cloudflare": "^5.0.1",
        "@sveltejs/kit": "^2.16.1",
        "@sveltejs/vite-plugin-svelte": "^5.0.3",
        "@tailwindcss/forms": "^0.5.10",
        "@tailwindcss/nesting": "^0.0.0-insiders.565cd3e",
        "@trivago/prettier-plugin-sort-imports": "^5.2.2",
        "@types/debug": "^4.1.12",
        "@types/eslint": "^9.6.1",
        "@types/node": "^22.12.0",
        "@types/ua-parser-js": "^0.7.39",
        "@types/uuid": "^10.0.0",
        "autoprefixer": "^10.4.19",
        "eslint": "^9.19.0",
        "eslint-config-prettier": "^10.0.1",
        "eslint-plugin-svelte": "^2.46.1",
        "globals": "^15.14.0",
        "husky": "^9.1.7",
        "jiti": "^2.4.2",
        "mkcert": "^3.2.0",
        "msw": "^2.7.0",
        "peggy": "^4.2.0",
        "postcss": "^8.4.49",
        "postcss-import": "^16.1.0",
        "prettier": "^3.4.1",
        "prettier-plugin-svelte": "^3.3.2",
        "prettier-plugin-tailwindcss": "^0.6.11",
        "sharp": "^0.33.5",
        "svelte": "^5.19.5",
        "svelte-check": "^4.1.4",
        "svgo": "^3.3.2",
        "tailwindcss": "^3.4.17",
        "tailwindcss-bg-patterns": "^0.3.0",
        "tsx": "^4.19.2",
        "typescript": "^5.7.3",
        "typescript-eslint": "^8.22.0",
        "vite": "^6.0.11",
        "vite-plugin-static-copy": "^2.2.0",
        "vitest": "^3.0.4",
        "wrangler": "^3.106.0"
    },
    "msw": {
        "workerDirectory": [
            "static-generated"
        ]
    }
}
