{
    "name": "shine-web",
    "version": "0.0.1",
    "private": true,
    "type": "module",
    "scripts": {
        "prepare": "husky",
        "env:mock": "npx msw init && tsx scripts/select-config.ts mock",
        "env:local": "tsx scripts/select-config.ts local",
        "env:dev": "tsx scripts/select-config.ts dev",
        "env:prod": "tsx scripts/select-config.ts prod",
        "build:svgParser": "npx peggy -c src/components/atoms/svg/peggy.config.js && node scripts/fix-parser.js",
        "build:assets": "cd ../shine-assets && pnpm run build:ui --out=../shine-web/static-generated/assets",
        "build:css": "npx @tailwindcss/cli -i ./src/app.css -o ./temp/app.css",
        "start": "vite dev",
        "build": "vite build",
        "watch": "vite watch",
        "preview": "vite build && vite preview",
        "test": "pnpm run test:integration && pnpm run test:unit",
        "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
        "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
        "lint": "pnpm run lint:format && pnpm run lint:eslint",
        "lint:format": "prettier --check .",
        "lint:eslint": "eslint .",
        "format": "prettier --write .",
        "test:integration": "playwright test",
        "test:unit": "vitest",
        "mkcert": "cd certificates && mkcert create-ca && mkcert create-cert --domains local.scytta.com",
        "storybook": "storybook dev -p 6006",
        "build-storybook": "storybook build"
    },
    "dependencies": {
        "@floating-ui/dom": "^1.7.4",
        "debug": "^4.4.3",
        "sveltekit-i18n": "^2.4.2",
        "tailwind-merge": "^3.3.1",
        "turnstile-types": "^1.2.3",
        "ua-parser-js": "^2.0.5",
        "uuid": "^13.0.0",
        "zod": "^4.1.11"
    },
    "devDependencies": {
        "@chromatic-com/storybook": "4.1.2",
        "@playwright/test": "^1.54.1",
        "@skeletonlabs/tw-plugin": "^0.4.1",
        "@storybook/addon-a11y": "10.0.6",
        "@storybook/addon-docs": "10.0.6",
        "@storybook/addon-svelte-csf": "5.0.10",
        "@storybook/addon-themes": "^10.0.6",
        "@storybook/addon-vitest": "10.0.6",
        "@storybook/sveltekit": "10.0.6",
        "@stylistic/eslint-plugin": "^5.4.0",
        "@sveltejs/adapter-cloudflare": "^7.1.1",
        "@sveltejs/kit": "^2.43.8",
        "@sveltejs/vite-plugin-svelte": "^6.2.1",
        "@tailwindcss/cli": "^4.1.14",
        "@tailwindcss/forms": "^0.5.10",
        "@tailwindcss/vite": "^4.1.14",
        "@trivago/prettier-plugin-sort-imports": "^6.0.0",
        "@types/debug": "^4.1.12",
        "@types/eslint": "^9.6.1",
        "@types/node": "^24.6.2",
        "@types/ua-parser-js": "^0.7.39",
        "@types/uuid": "^10.0.0",
        "@vitest/browser": "^4.0.8",
        "@vitest/coverage-v8": "^4.0.8",
        "eslint": "^9.36.0",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-storybook": "10.0.6",
        "eslint-plugin-svelte": "^3.12.4",
        "globals": "^16.4.0",
        "husky": "^9.1.7",
        "jiti": "^2.6.1",
        "mkcert": "^3.2.0",
        "msw": "^2.11.3",
        "peggy": "^5.0.6",
        "playwright": "^1.56.1",
        "prettier": "^3.6.2",
        "prettier-plugin-svelte": "^3.4.0",
        "prettier-plugin-tailwindcss": "^0.7.1",
        "storybook": "10.0.6",
        "svelte": "^5.39.8",
        "svelte-check": "^4.3.2",
        "tailwindcss": "^4.1.14",
        "tailwindcss-bg-patterns": "^0.3.0",
        "tsx": "^4.20.6",
        "typescript": "^5.9.3",
        "typescript-eslint": "^8.45.0",
        "vite": "^7.1.9",
        "vite-plugin-static-copy": "^3.1.3",
        "vitest": "^3.2.4",
        "wrangler": "=4.42.0"
    },
    "msw": {
        "workerDirectory": [
            "static-generated"
        ]
    }
}
