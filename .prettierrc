{
    "useTabs": false,
    "tabWidth": 4,
    "endOfLine": "auto",
    "bracketSpacing": true,
    "bracketSameLine": false,
    "singleQuote": true,
    "trailingComma": "none",
    "semi": true,
    "printWidth": 120,
    "plugins": ["prettier-plugin-svelte", "prettier-plugin-tailwindcss", "@trivago/prettier-plugin-sort-imports"],
    "overrides": [
        {
            "files": "*.svelte",
            "options": {
                "parser": "svelte"
            }
        }
    ],
    "importOrder": [
        "<THIRD_PARTY_MODULES>",
        "^\\$app/(.*)$",
        "^\\$lib/(.*)$",
        "^\\$atoms/(.*)$",
        "^\\$components/(.*)$",
        "^\\$features/(.*)$",
        "^[./]"
    ],
    "importOrderSeparation": false,
    "importOrderSortSpecifiers": true
}
